<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/tx 
                http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
                http://www.springframework.org/schema/context 
                http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Session Factory Declaration -->
    <bean id="SessionFactory"
        class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="DataSource" />
        <property name="annotatedClasses">
            <list>
                <value>com.memo.model.User</value>
                <value>com.memo.model.News</value>
                <value>com.memo.model.NewsLetter</value>
                <value>com.memo.model.UserNewsletter</value>
                <value>com.memo.model.UserImage</value>
                <value>com.memo.model.Application</value>
                <value>com.memo.model.KAImage</value>
                <value>com.memo.model.Currency</value>
                <value>com.memo.model.ItemType</value>
                <value>com.memo.model.KIImage</value>
                <value>com.memo.model.Item</value>
                <value>com.memo.model.Embed</value>
                <value>com.memo.model.Color</value>
                <value>com.memo.model.Size</value>
                <value>com.memo.model.Material</value>
                <value>com.memo.model.ItemTypeColor</value>
                <value>com.memo.model.ItemTypeSize</value>
                <value>com.memo.model.ItemTypeMaterial</value>
                <value>com.memo.model.ItemColor</value>
                <value>com.memo.model.ItemSize</value>
                <value>com.memo.model.ItemMaterial</value>
                <value>com.memo.model.Price</value>
                <value>com.memo.model.Order</value>
                <value>com.memo.model.OrderItem</value>
                <value>com.memo.model.UserHistory</value>
                <value>com.memo.model.UserDiscount</value>
                <value>com.memo.model.Discount</value>
                <value>com.memo.model.DiscountItem</value>
                <value>com.memo.model.AbstractDiscountSource</value>
                <value>com.memo.model.Comment</value>
                <value>com.memo.model.UserFavorites</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>
    <bean id="transactionManager"
        class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref bean="SessionFactory" />
        </property>
    </bean>
    <tx:annotation-driven />
</beans>